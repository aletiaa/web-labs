@model List<Product>

<h1>All products here</h1>
<table>
  <tr>
    <th></th>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th></th>
  </tr>
@foreach (var product in Model)
{
  <tr>
    <td>@Html.ActionLink("SHOW DETAILS", "Index", "Product", new {id = @product.ID}, new { @class = "btn btn-light" })</td>
    <td>@product.ID</td>
    <td>@product.Name</td>
    <td>@product.Price</td>
    <td>@Html.ActionLink("- REMOVE", "RemoveProduct", "Product", new {id = @product.ID}, new { @class = "btn btn-danger" })</td>
  </tr>
}
</table>

